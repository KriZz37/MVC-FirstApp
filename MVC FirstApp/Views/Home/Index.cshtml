@model MVC_FirstApp.Models.ViewModels.HomeUserViewModel

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/home.css" />

<div class="page card">
    <div class="card-header">
        <h2>Twoje konto:</h2>
    </div>
    <div class="card-body p-0">
        <table class="table table-bordered m-0">
            <tbody>
                <tr>
                    <th scope="row">Imię</th>
                    <td>@Model.FirstName</td>
                </tr>
                <tr>
                    <th scope="row">Nazwisko</th>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <th scope="row">Grupa</th>
                    @switch (Model.Group)
                    {
                        case GroupEnum.None:
                            <td>-</td>
                            break;
                        case GroupEnum.GroupA:
                            <td>Grupa A</td>
                            break;
                        case GroupEnum.GroupB:
                            <td>Grupa B</td>
                            break;
                        case GroupEnum.GroupC:
                            <td>Grupa C</td>
                            break;
                    }
                </tr>
                <tr>
                    <th scope="row">Stanowisko</th>
                    @switch (Model.Position)
                    {
                        case PositionEnum.None:
                            <td>-</td>
                            break;
                        case PositionEnum.WarehouseWorker:
                            <td>Pracownik magazynu</td>
                            break;
                        case PositionEnum.TeamLeader:
                            <td>Kierownik</td>
                            break;
                    }
                </tr>
                <tr>
                    <th scope="row">Hasło</th>
                    <td><a class="btn btn-outline-info" asp-controller="Home" asp-action="Password" asp-route-id="@Model.Id">Zmień</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>