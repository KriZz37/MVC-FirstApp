@model MVC_FirstApp.Models.ViewModels.PasswordViewModel

@{
    ViewData["Title"] = "Password";
}

<div style="width: 40%; margin: auto;">
    <h1 class="card-title">Zmień hasło</h1>
    <form method="post">
        <div class="form-group">
            <input asp-for="CurrentPassword" class="form-control" placeholder="Obecne hasło" />
        </div>
        <div class="form-group">
            <input asp-for="NewPassword" class="form-control" placeholder="Nowe hasło" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Powtórz nowe hasło" />
        </div>
        <div asp-validation-summary="All"></div>
        <span class="btn-group-toggle">
            <button type="submit" class="btn btn-primary">Zmień</button>
            <a class="btn btn-secondary float-right" asp-controller="Home" asp-action="Index">Powrót</a>
        </span>
    </form>
</div>