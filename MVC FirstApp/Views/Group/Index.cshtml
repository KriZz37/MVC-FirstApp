@model MVC_FirstApp.Models.ViewModels.GroupListViewModel

@{
    ViewData["Title"] = "Index";
}

@{int i = 1;} 

<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Imię</th>
            <th scope="col">Nazwisko</th>
            <th scope="col">Stanowisko</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Accounts)
        {
        <tr>
            <th scope="row">@i</th>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Position</td>
            <td><a class="btn btn-primary btn-sm" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edytuj</a></td>
            <td><a class="btn btn-danger btn-sm" asp-controller="Group" asp-action="Remove" asp-route-id="@user.Id">Usuń</a></td>
        </tr>
            i++;
        }
    </tbody>
</table>